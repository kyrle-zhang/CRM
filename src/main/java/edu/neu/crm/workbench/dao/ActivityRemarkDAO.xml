<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.neu.crm.workbench.dao.ActivityRemarkDAO">

    <select id="getByActivityId" resultType="int">
        select
        count(*)
        from tbl_activity_remark
        where activityid in
        <foreach collection="array" separator="," open="(" close=")" item="activityId">
            #{activityId}
        </foreach>
    </select>

    <delete id="deleteByActivityId">
        delete
        from tbl_activity_remark
        where activityid in
        <foreach collection="array" separator="," open="(" close=")" item="activityId">
            #{activityId}
        </foreach>
    </delete>

</mapper>